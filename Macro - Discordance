//////
// Macro de Discordance
// Ter 10 animais ao seu redor.
//////
// Selecionar os animais
if not @findobject 'discord1'
  headmsg '*Selecione o primeiro animal.*'
  promptalias 'discord1'
endif
if not @findobject 'discord2'
  headmsg '*Selecione o segundo animal.*'
  promptalias 'discord2'
endif
if not @findobject 'discord3'
  headmsg '*Selecione o terceiro animal.*'
  promptalias 'discord3'
endif
if not @findobject 'discord4'
  headmsg '*Selecione o quarto animal.*'
  promptalias 'discord4'
endif
if not @findobject 'discord5'
  headmsg '*Selecione o quinto animal.*'
  promptalias 'discord5'
endif
if not @findobject 'discord6'
  headmsg '*Selecione o sexto animal.*'
  promptalias 'discord6'
endif
if not @findobject 'discord7'
  headmsg '*Selecione o setimo animal.*'
  promptalias 'discord7'
endif
if not @findobject 'discord8'
  headmsg '*Selecione o oitavo animal.*'
  promptalias 'discord8'
endif
if not @findobject 'discord9'
  headmsg '*Selecione o oitavo animal.*'
  promptalias 'discord9'
endif
if not @findobject 'discord0'
  headmsg '*Selecione o oitavo animal.*'
  promptalias 'discord0'
endif
// Discordance 1
@clearjournal
useskill 'Discordance'
waitfortarget 2000
target! 'discord1'
pause 500
while not @injournal 'reduzindo a forca' 'system'
  if @injournal 'ja esta em' 'system'
    break
  endif
  if @injournal 'nao conseguiu' 'system'
    pause 500
    useskill 'Discordance'
    waitfortarget 2000
    target! 'discord1'
    pause 500
  endif
endwhile
// Discordance 2
